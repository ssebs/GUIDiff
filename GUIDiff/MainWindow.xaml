        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUIDiff"
        mc:Ignorable="d"
        xmlns:diffplex="clr-namespace:DiffPlex.Wpf.Controls;assembly=DiffPlex.Wpf"
        Title="GUIDiff" Height="450" Width="800"
>
    <Grid>
        <diffplex:DiffViewer x:Name="GUIDiff" Margin="0,35,0,0"/>
        <Button x:Name="BtnFile1" Content="File 1" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Button x:Name="BtnFile2" Content="File 2" HorizontalAlignment="Left" Margin="400,10,0,0" VerticalAlignment="Top" Click="Button_Click"/>
    </Grid>
</Window>
